{
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "source": "functions"
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/robot.txt",
        "function": "robotsTxt"
      },
      {
        "source": "/sitemap.xml",
        "function": "sitemapXml"
      },
      {
        "source": "/robots.txt",
        "function": "robotsTxt"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
